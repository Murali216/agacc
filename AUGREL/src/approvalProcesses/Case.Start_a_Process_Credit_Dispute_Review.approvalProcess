        <description>If Confirmation Required = No, leave Case Owner = Team Lead Queue</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Confirmation_Required__c</field>
                <operation>equals</operation>
                <value>No</value>
            </criteriaItems>
