            <whenMultipleApprovers>FirstResponse</whenMultipleApprovers>
        </assignedApprover>
        <description>If Confirmation Required = Yes - Verbal, set Case Owner = Resolution Team Queue</description>
        <entryCriteria>
            <criteriaItems>
                <field>Case.Confirmation_Required__c</field>
